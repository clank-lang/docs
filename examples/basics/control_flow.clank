// Match with guards
Æ’ classify(n: â„¤) â†’ ð•Š {
  match n {
    0 â†’ "zero",
    n if n > 0 âˆ§ n % 2 == 0 â†’ "positive even",
    n if n > 0 â†’ "positive odd",
    n if n % 2 == 0 â†’ "negative even",
    _ â†’ "negative odd"
  }
}

// For loop
Æ’ sum_range(start: â„¤, end: â„¤) â†’ â„¤ {
  let mut total = 0
  for i âˆˆ start..end {
    total = total + i
