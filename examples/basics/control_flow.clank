// While loop
Æ’ countdown(n: â„•) â†’ IO[()] {
  let mut i = n
  while i > 0 {
    println(str(i))
    i = i - 1
  }
  println("Liftoff!")
}

// Loop with break
Æ’ find_first_even(numbers: [â„¤]) â†’ Option[â„¤] {
  let mut result: Option[â„¤] = None
  for n âˆˆ numbers {
    if n % 2 == 0 {
